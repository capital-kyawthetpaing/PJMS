
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_.LoginLayout.cshtml";
}

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row"> <img style="margin-left:40px" src="@Url.Content("~/SystemImages/Global.asax.jpg")" class="logo"> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://i.imgur.com/uNGdWHi.png" class="image"> </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    <div style="text-align:center;width:100%">
                        <label>
                            <b><label style="font-size:22px;">プロジェクト管理システム</label></b>
                        </label>
                    </div>
                    <div class="row px-3">
                        <label class="mb-1">
                            <b>ユーザーID</b>
                        </label> <input id="UserID" onkeydown="KeyDown(event,this)"  tabindex="1" class="mb-4" type="text" placeholder="ユーザーID入力">
                    </div>
                    <div class="row px-3">
                        <label class="mb-1">
                            <b>パスワード</b>
                        </label> <input id="Password" onkeydown="KeyDown(event,this,'LoginClick')" tabindex="2" type="password" name="password" placeholder="パスワード入力">
                    </div>
                    <div class="row px-3 mb-4">
                        <div class="custom-control custom-checkbox custom-control-inline"></div>
                    </div>
                    <div class="row mb-3 px-3"> <button onclick="LoginClick();" tabindex="3" class="btn btn-success text-center">ログイン</button> </div>
                </div>
            </div>
        </div>
        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">CKM Copyright &copy; 2021. All rights reserved.</small>
                <div class="social-contact ml-4 ml-sm-auto"> <span class="fa fa-facebook mr-4 text-sm"></span> <span class="fa fa-google-plus mr-4 text-sm"></span> <span class="fa fa-linkedin mr-4 text-sm"></span> <span class="fa fa-twitter mr-4 mr-sm-5 text-sm"></span> </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#UserID").focus();
        });        

        function LoginClick() {
            if (ErrorCheck()) {
                var obj = {
                UserID: $("#UserID").val(),
                Password: $("#Password").val(),
                };
                var response = CalltoApiController('@Url.Action("GetUser", "api/UserApi")', obj);
                var userdata = JSON.parse(response);
                if (userdata.length > 0) {
                    var userinfo = userdata[0].UserID + '_' + userdata[0].UserName;
                    $.post('@Url.Action("CreateSession", "Home")',
                        { key: "UserInfo", value: userinfo }, function (data) {
                            location.href = '@Url.Action("ProjectView", "Project")';
                        });
                }
                else {
                    ShowMessage("E101");
                }
            }
        }

        function ErrorCheck() {
            if (!$("#UserID").val()) {
                ShowMessage("E102");
                $("#UserID").focus();
                return false;
            }
            else if (!$("#Password").val()) {
                ShowMessage("E102");
                $("#Password").focus();
                return false;
            }
            return true;
        }

        //ssa chg [2021_06_11]
        function KeyDown(e, ctrl, functionname) {
            if (e.which == 13 || e.which == 9) {
                e.preventDefault();
                moveNext(ctrl);

                if (functionname) {
                    var fn = window[functionname];
                    fn('OK');
                }
            }
        }

        function moveNext(ctrl) {
            do {
                ctrl = $('[tabIndex=' + (+$(ctrl).attr("tabIndex") + 1) + ']');
                if (!$(ctrl).length) {
                    ctrl = $('[tabIndex=1]');
                    break;
                }
            } while ($(ctrl).is('[disabled=disabled]'));
            $(ctrl).select();
            $(ctrl).focus();
        }

    </script>
}
