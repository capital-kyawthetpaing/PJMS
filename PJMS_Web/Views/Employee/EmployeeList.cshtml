
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_PJMSLayout.cshtml";
}
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">Employee List</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="panel-body">
        <table id="tblEmployee" class="table table-striped table-bordered table-td-valign-middle" style="width:100%">
            <thead>
                <tr>
                    <th>EmployeePhoto</th>
                    <th>EmployeeCD</th>
                    <th>EmployeeName</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            var obj = {
                EmployeeCD: ''
            };
                var response = CalltoApiController('@Url.Action("GetEmployee", "api/EmployeeListApi")',obj);
                BindTable(response);
        });
            function BindTable(response) {
                table = $('#tblEmployee').DataTable({
                    responsive: true,
                    data: JSON.parse(response),
                    datasrc:"",
                    destroy: true,
                    "paging":true,
                    "ordering": true,
                    "columns": [
                        { "data": "EmployeePhoto", "className": "align-center", "width": "10%" },
                        { "data": "EmployeeCD", "className": "align-center", "width": "20%" },
                        { "data": "EmployeeName", "className": "align-center", "width": "70%" },
                    ],
                    "columnDefs": [{
                        "targets": 0,
                        "data": "EmployeePhoto",
                        "render": function (data) {
                            return '<img src="http://163.43.113.92/HR_Management/Photo/' + data + '" style="max-width:50px; max-height:70px" />'; 
                        },
                    }]
                });
            }
        @*function EmployeeEdit(data, mode) {
            window.location.href = '@Url.Action("EmployeeEntry", "Employee")?EmployeeCD=' + data + '&Mode=' + mode;
        }*@
    </script>
} 