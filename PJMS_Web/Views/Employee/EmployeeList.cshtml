
@{
    ViewBag.Title = "EmployeeList";
    Layout = "~/Views/Shared/_PJMSLayout.cshtml";
}
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">Employee List</h4>
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
    </div>
    <div class="panel-body">
        <table id="tblEmployee" class="table table-striped reducepadding table-bordered table-td-valign-middle" style="width:100%">
            <thead>
                <tr>
                    <th>Command</th>
                    <th>EmployeeCD</th>
                    <th>EmployeeName</th>
                    <th>EmployeePhoto</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            var obj = {
                EmployeeCD: ''
            };
                var response = CalltoApiController('@Url.Action("GetEmployee", "api/EmployeeListApi")',obj);
                BindTable(response);
            });
            function BindTable(response) {
                table = $('#tblEmployee').DataTable({
                    responsive: true,
                    dom: 'Bfrtip',
                    data: JSON.parse(response),
                    datasrc:"",
                    destroy: true,
                    "paging":true,
                    "ordering": true,
                    "columns": [
                        { "data": "EmployeeCD", "className": "align-center", "width": "10%" },
                        { "data": "EmployeeCD", "className": "align-center", "width": "10%" },
                        { "data": "EmployeeName", "className": "align-center", "width": "40%" },
                        { "data": "EmployeePhoto", "className": "align-center", "width": "40%" }
                    ],
                    "buttons": [
                        {
                            extend: 'copy'
                        },
                        {
                            extend: 'excel',
                            className: 'btn-success',
                            init: function (api, node, config) {
                                $(node).removeClass("btn-secondary");
                            }
                        },
                        {
                            extend: 'pdf',
                            className: 'btn-danger',
                            charset: "utf-8",
                            init: function (api, node, config) {
                                $(node).removeClass("btn-secondary");
                            }
                        },
                    ],
                    "columnDefs": [{
                        "targets": 0,
                        "data": "EmployeeCD",
                        "render": function (data) {
                            return '<input type="button" class="btn btn-info" style="width:70px;margin:3px;" onclick="EmployeeEdit(\'' + data + '\',\'Edit\')" value="Edit">'; 
                        },
                    }]
                });
        }
        function EmployeeEdit(data, mode) {
            window.location.href = '@Url.Action("EmployeeEntry", "Employee")?EmployeeCD=' + data + '&Mode=' + mode;
        }
    </script>
} 