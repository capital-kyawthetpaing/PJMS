                    "render": function (data) {
                        return '<input type="checkbox" data-val="true" data-val-required="The IsChecked field is required." name="IsChecked" id="checkID" class="chkStatus">';
                    },
                }],
            });
        }
        //Today
        $("a").click(function () {
            i = $(this).data("value");
            if (i == 1) {
                $('.chkStatus').on('change', function () {
                    $('.chkStatus').not(this).prop('checked', false);
                });
            } $(i).empty();
        });
        
        $(".chkStatus").empty();
        $(document).ready(function () {
            BindProjectDetail();
        });
        function BindProjectDetail() {
            $('#btnAdd').click(function () {
                var message = '';
