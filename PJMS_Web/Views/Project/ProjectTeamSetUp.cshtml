                    var row = $(this).closest("tr")[0];
                    message += "  " + row.cells[1].innerHTML;
                });
                let data = "<tr><td class='text-center'>" + $("#selectProject").val() + "</td><td class='text-center'>" + message + "</td><td class='text-center'>" + i + "</td></tr>";
                    $("#selectedProjectDetail tbody").append(data);
            });
        }
