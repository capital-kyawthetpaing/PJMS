@model PJMS_Model.ProjectModel

@{
    ViewBag.Title = "ProjectTeamSetUp";
    Layout = "~/Views/Shared/_PJMSLayout.cshtml";
}
<div class="panel-body">
    <div class="container-fluid" id="content_zip">
        <div class="row">
            <div class="col-xl-12 col-md-12 col-sm-12 mb-2">
                <div class="card" id="border-entry">
                    <div class="card-body">
                        <h2>Project's Team Setup</h2>
                        <div class="col-xl-12 col-md-12 col-sm-12 mb-2">
                            @Html.LabelFor(model => model.Teams, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.RadioButton("Teams", "SystemTeam", new { @checked = true })SystemTeams
                            @Html.RadioButton("Teams", "SeisakuTeam")SeisakuTeams
                        </div>
                        <div>
                            @Html.LabelFor(model => model.Projects, htmlAttributes: new { @class = "control-label col-md-2" })
                            <select id="btn">
                                <option value = ''>--Select Project--</option>
                            </select>
                        </div>
                        <div class="col-xl-12 col-md-12 col-sm-12 mb-2" id="position">
                            @Html.LabelFor(model => model.ProjectLeaders, htmlAttributes: new { @class = "control-label col-md-2" })
                            <a href="#" data-izimodal-open="#modal" data-izimodal-transitionin="fadeInRight" class="leader">Add Leader</a><br />
                            @Html.LabelFor(model => model.ProjectMembers, htmlAttributes: new { @class = "control-label col-md-2 ",})
                            <a href="#" data-izimodal-open="#modal" data-izimodal-transitionin="fadeInRight" id="member">Add Member</a>
                            <div class="modal" id="modal" style="height: auto">
                                <div class="sections">
                                    <section>
                                        <table id="tblEmployee1" class="table table-striped reducepadding table-bordered table-td-valign-middle" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>EmployeeCD</th>
                                                    <th>EmployeeName</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                        <button type="button" id="btnRemove" class="btn btn-dark col-md-4"><i class="fa fa-window-close"></i>&nbsp; Close</button>
                                        <button type="button" id="btnAdd" class="btn btn-dark col-md-4"><i class="fa fa-window-close"></i>&nbsp; Add Employee</button>
                                    </section>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-12 col-md-12 col-sm-12 mb-2 text-center">
                            <div class="text-s font-weight-bold text-custom1 text-uppercase mb-1">
                                <button id="btnSave" class="btn col-xl-2">Save / Update</button>
                                <button id="btnCancel" class="btn col-xl-2">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
        const btn = document.querySelector('#btn');
        btn.onclick = function () {
                const teams = document.querySelectorAll('input[name="Teams"]');
                let selectedProject;
                for (const team of teams) {
                    if (team.checked) {
                        selectedProject = team.value;
                        if (selectedProject == 'SystemTeam') {
                            $(document).ready(function () {
                                let obj = {
                                    ProjectCD: ''
                                };
                                let r = JSON.parse(CalltoApiController('@Url.Action("GetProject1", "api/ProjectListApi")', obj));
                                $("#btn").empty();
                                $("#btn").prepend("<option value=''selected='selected'></option>");
                                for (var i = 0; i < r.length; i++) {
                                    $("#btn").append('<option value ="' + r[i].ProjectName + '">' + r[i].ProjectName + '</option>');
                                }
                               @* function getSelectedValue() {
                                    var selectedValue = document.getElementById("btn").text;
                                    alert(selectedValue);
                                }*@
                                @*$("select.btn").change(function () {
                                    let selectedItem = $(this).children("option:selected").text();
                                    alert(selectedItem);
                                });*@
                            });
                        }
                        else {
                            $(document).ready(function () {
                                let obj = {
                                    ProjectCD: ''
                                };
                                let r = JSON.parse(CalltoApiController('@Url.Action("GetProject2", "api/ProjectListApi")', obj));
                                $("#btn").empty();
                                $("#btn").prepend("<option value='' selected='selected'></option>");
                                for (var i = 0; i < r.length; i++)
                                {
                                    $("#btn").append('<option value ="' + r[i].ProjectName + '">' + r[i].ProjectName + '</option>');
                                }
                            });
                        }
                    }
                }
            };
        $(".modal").iziModal({
            title: "Employee List",
            padding: 10,
            TransitionIn: 'FadeInRight',
            theme: 'light',
            headerColor: 'deepskyblue',
        });
        $('#btnRemove').on('click', function (e) {
            $('#modal').remove();
        });
        $('#btnAdd').click(function () {
            //$('#modal.leader').click(function () {
            alert("Position");
            //});
        });
        
        $(document).ready(function () {
            var obj = {
                EmployeeCD: ''
            };
            var response = CalltoApiController('@Url.Action("GetEmployee", "api/EmployeeListApi")', obj);
            BindTable(response);
        });
        function BindTable(response) {
            table = $('#tblEmployee1').DataTable({
                resSelectListItemelectListItemelectListelectListonsive: true,
                data: JSON.parse(response),
                datasrc: "",
                destroy: true,
                "paging": true,
                "ordering": true,
                "columns": [
                    { "data": "EmployeeCD", "className": "align-center", "width": "20%" },
                    { "data": "EmployeeCD", "className": "align-center", "width": "40%" },
                    { "data": "EmployeeName", "className": "align-center", "width": "40%" },
                ],
                "columnDefs": [{
                    "targets": 0,
                    "data": "EmployeeCD",
                    "render": function (data) {
                        return '<input type="checkbox" data-val="true" data-val-required="The IsChecked field is required." name="IsChecked"  class="chkStatus" onchange="EditUser(this)">';
                    },
                }],
            });
        }
        function EditUser(Item) {
            if (Item.checked) {
                $('input.chkStatus').not(Item).prop('checked', false);
            }
        }
    </script>
}